<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Active</th>
      <th>User</th>
      <th>Ground</th>
      <th>Selected activity</th>
      <th>Starting time</th>
      <th>Finishing time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.active %></td>
        <td><%= reservation.user_id %></td>
        <td><%= reservation.ground_id %></td>
        <td><%= reservation.sports_master_id %></td>
        <td><%= reservation.starting_time %></td>
        <td><%= reservation.finishing_time %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Destroy All', destroyall_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

