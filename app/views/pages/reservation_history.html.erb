<% if @sus_user%>
	<% controller.redirect_to root_path, notice: "Unauthorized access!" %>
<% else %>
<div class="reservation-history-background">
	<%= render 'pages/header'%>
	<div class="reservations-history-body" >
		<div class="custom-jumbotron w-100">
		  <div class="container">
		    <h1 class=" main-title">RESERVATIONS HISTORY</h1>
		    <p class="lead-title">Record of all the reservations you have made.</p>
		  </div>
		</div>
		<% if @active_reservations_history != [] or @active_reservations_history == nil %>
			<div class="custom-jumbotron w-100">
				<div class="container">
					<h3 class="secondary-title center">ACTIVE RESERVATIONS</h3>
				</div>
			</div>
			<div class="reservations-history-holder">
				<% if @active_reservations_history %>
					<% @active_reservations_history.each do |resservation_history_hash| %>
						<div class="col-lg-4 col-sm-12" style="padding:5px">
							<div class="reservations-history-post" style="color:white;">
								<div class="reservations-history-post-info-holder">
									<% if resservation_history_hash[:history_for] == "ground"%>
										<div class="reservations-history-ground-name">
											<%= resservation_history_hash[:username]%>
										</div>
									<% else %>
										<div class="reservations-history-ground-name">
											<%= resservation_history_hash[:ground_name]%>
										</div>
									<% end %>
									<div class="reservations-history-post-datetime-holder">
										<div class="reservations-history-date">
											<span class="reservations-history-small-title">Date:</span><%= resservation_history_hash[:reservation_date] %>
										</div> 

										<div class="reservations-history-time">
											<span class="reservations-history-small-title">Starts At:</span><%= resservation_history_hash[:startingtime] %>
										</div>	

										<div class="reservations-history-time">
											<span class="reservations-history-small-title">Created On:</span><%= resservation_history_hash[:created_at] %>
										</div>	

										<div class="reservations-history-time">
											<span class="reservations-history-small-title">Cost:</span>₹<%= resservation_history_hash[:cost] %>
										</div>	
									</div>	
									<div class="submit-div">
										<%= link_to 'VISIT GROUND', resservation_history_hash[:ground_obj], class: "btn btn-success cancel-btn reservations-history-res-btn" %>
									</div>
								</div>
							</div>
						</div>
					<% end %>
				<% end %>
			</div>
		<% end %>
		<% if @inactive_reservations_history != [] or @inactive_reservations_history == nil %>
			<div class="custom-jumbotron w-100">
				<div class="container">
					<h3 class="secondary-title center" >INACTIVE RESERVATIONS</h3>
				</div>
			</div>
			<div class="reservations-history-holder">
				<% if @inactive_reservations_history %>
					<% @inactive_reservations_history.each do |resservation_history_hash| %>
						<div class="col-lg-4 col-sm-12" style="padding:5px">
							<div class="reservations-history-post" style="color:white;">
								<div class="reservations-history-post-info-holder">
									<% if resservation_history_hash[:history_for] == "ground"%>
										<div class="reservations-history-ground-name" >
											<%= resservation_history_hash[:username]%>
										</div>
									<% else %>
										<div class="reservations-history-ground-name" >
											<%= resservation_history_hash[:ground_name]%>
										</div>
									<% end %>
									<div class="reservations-history-post-datetime-holder">
										<div class="reservations-history-date"><span class="reservations-history-small-title">Date:</span><%= resservation_history_hash[:reservation_date] %></div> 

										<div class="reservations-history-time"><span class="reservations-history-small-title">Starts At:</span><%= resservation_history_hash[:startingtime] %></div>	

										<div class="reservations-history-time"><span class="reservations-history-small-title">Created On:</span><%= resservation_history_hash[:created_at] %></div>

										<div class="reservations-history-time">
											<span class="reservations-history-small-title">Cost:</span>₹<%= resservation_history_hash[:cost] %>
										</div>


										<!-- <div class="reservations-history-time"><span class="reservations-history-small-title">Cost:</span><%= resservation_history_hash[:created_at] %></div>	 -->
									</div>	
									<div class="submit-div">
										<%= link_to 'VISIT GROUND', resservation_history_hash[:ground_obj], class: "btn btn-success cancel-btn reservations-history-res-btn" %>
									</div>
								</div>
							</div>
						</div>
					<% end %>
				<% end %>
			</div>	
		<% end %>	
	</div>
</div>

<% end %>