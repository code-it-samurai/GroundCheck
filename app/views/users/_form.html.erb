  <div class="edit-user-holder">
  <%= form_with(model: user) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="custom-jumbotron w-100">
      <div class="container">
        <h1 class=" main-title">Profile Edit</h1>
      </div>
    </div>
    <div class="new-ground-textboxes-holder justify-center1"> 
      <div class="textboxes-holder col-lg-4 col-sm-12">
        <div class="container justify-center">
          <div class="tb-holder-title">Primary Info</div>

          <div class="new-ground-textbox-holder">
            <div class="new-ground-tb-lables">Username:</div>
            <%= form.text_field :username, placeholder: 'Username', class: "form-textbox edit-profile-textbox" %>
          </div>

          <div class="new-ground-textbox-holder">
            <div class="new-ground-tb-lables">Email:</div>
            <% if user.email %>
              <%= form.email_field :email, placeholder: 'Email or Phone', class: "form-textbox edit-profile-textbox", ondrop:"return false;", onpaste:"return false;", onkeypress:"return (event.charCode>=97 && event.charCode<=122) || (event.charCode>=48 && event.charCode<=57) || event.charCode== 64 || event.charCode== 46", disabled: true%>
            <% else %>
              <%= form.email_field :email, placeholder: 'Email or Phone', class: "form-textbox edit-profile-textbox", ondrop:"return false;", onpaste:"return false;", onkeypress:"return (event.charCode>=97 && event.charCode<=122) || (event.charCode>=48 && event.charCode<=57) || event.charCode== 64 || event.charCode== 46" %>
            <% end %>
          </div>

          <div class="new-ground-textbox-holder">
            <div class="new-ground-tb-lables">Name:</div>
            <%= form.text_field :name, placeholder: 'Name', class: "form-textbox edit-profile-textbox" %>
          </div>

          <div class="new-ground-textbox-holder">
            <div class="new-ground-tb-lables">Pincode:</div>
            <%= form.number_field :pincode, placeholder: 'Pincode', class: "form-textbox edit-profile-textbox", min:100000, max:999999, ondrop:"return false;", onpaste:"return false;", onkeypress:"return event.charCode>=48 && event.charCode<=57" %>
          </div>

          <div class="new-ground-textbox-holder">
            <div class="new-ground-tb-lables">Location:</div>
            <%= form.text_area :address, class: "new-ground-profile-textbox" %>
          </div>
        </div>
      </div>
      <div class="textboxes-holder col-lg-4 col-sm-12">
        <div class="container justify-center">
          <div class="tb-holder-title">Activities</div>
          <div class="new-ground-interests">
            <div class="new-ground-interests-holder">
              <% if @all_activities %>
                <% @all_activities.each do |activity| %>
                  <% if @available_activities != nil %>
                    <% if @available_activities.include?activity %>
                      <div class="new-ground-interest-checkbox-holder">
                        <%= form.check_box :sports_activities, {multiple: true, checked: true}, activity, false%>
                        <div class="new-ground-interest-name"><%= activity %></div>
                      </div> 
                    <% else %>
                      <div class="new-ground-interest-checkbox-holder">
                        <%= form.check_box :sports_activities, {multiple: true}, activity, false%>
                        <div class="new-ground-interest-name"><%= activity %></div>
                      </div> 
                    <% end %>
                  <% else %>
                    <div class="new-ground-interest-checkbox-holder">
                      <%= form.check_box :sports_activities, {multiple: true}, activity, false%>
                      <div class="new-ground-interest-name"><%= activity %></div>
                    </div> 
                  <% end %>
                <% end %>
              <% end %>
            </div>  
          </div>
        </div>
      </div>
    </div>
    <div class="submit-div">
      <%= form.submit "SAVE", class: "btn-success btn submit-btn"%>
    </div>
  <% end %>  
</div>
